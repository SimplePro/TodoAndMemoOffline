<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <solid
                android:color="#A1A1A1"/>

            <stroke
                android:width="1.5dp"
                android:color="@android:color/black"/>

            <corners
                android:radius="5dp"/>

        </shape>

    </item>

    <item>

        <shape>

            <solid
                android:color="#E1DADA"/>

            <stroke
                android:width="1.5dp"
                android:color="@android:color/black"/>

            <corners
                android:radius="5dp"/>

        </shape>

    </item>

</selector>